<Window x:Class="MijnGebruiksaanwijzing.Windows.HomeLeerling"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MijnGebruiksaanwijzing.Windows"
        mc:Ignorable="d"
        Title="HomeBegeleider" Height="1080" Width="1920" WindowState="Maximized">
    
    <Window.Background>
        <ImageBrush ImageSource="/Images/light_wood_background_lighter.jpg"/>
    </Window.Background>

    <Grid>
        <TextBlock Text="Welkom Leerling" Margin="500,215,500,719" FontSize="75" TextAlignment="center"></TextBlock>
        
        <!--button rechtsboven in de hoek om uit te loggen -->
        <Button x:Name="btnLogout" Content="Uitloggen" Background="Red" Foreground="White" Margin="1688,25,25,954" Padding="8" FontSize="22" FontWeight="SemiBold" Click="btnLogout_Click" />
        
        <!-- Knop in het midden voor het beginnen van het spel-->
        <Button x:Name="btnStartGame" Content="Spel starten" Background="White" Foreground="Black" Margin="575,434,575,481" Padding="8" FontSize="50" FontWeight="SemiBold" Click="btnStartGame_Click" />
        
        <!-- knop onder de begin knop waar de resultaten in gezet worden-->
        <Button x:Name="btnPlayerBase" Content="Resultaten bekijken" Background="White" Foreground="Black" Margin="575,608,575,307" Padding="8" FontSize="50" FontWeight="SemiBold" Click="btnPlayerBase_Click"/>
        
        <!-- Pop-up om een keuze te maken van het type spel-->
        <Popup x:Name="popupStart" HorizontalAlignment="Center" VerticalAlignment="Center" Width="600" Height="300" OpacityMask="White">
            <StackPanel Background="White" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content="Waarvoor speel je?" Foreground="#D60096" FontSize="40" FontWeight="SemiBold" HorizontalAlignment="Center"></Label>
                <StackPanel Orientation="Horizontal">
                    <Button Background="#D60096" Content="School" Margin="20" Width="250" Height="150" Foreground="White" FontSize="45" FontWeight="SemiBold"></Button>
                    <Button Background="#D60096" Content="Stage" Margin="20" Width="250" Height="150" Foreground="White" FontSize="45" FontWeight="SemiBold"></Button>
                </StackPanel>
            </StackPanel>
        </Popup>
    </Grid>
    
</Window>
